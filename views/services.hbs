{{>adminmenu}}
<h1>Услуги</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Наименование</th>
            <th scope="col">Направление</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        {{#if services.length}}
            {{#each services}}
                <tr>
                    <td scope="row">{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.direction}}</td>
                    <td>
                        <a class="btn btn-primary" href="services/edit/{{this.id}}">Редактировать</a>
                        <form action="services/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="id" value="{{this.id}}" />
                            <input class="btn btn-danger" type="submit" value="Удалить" />
                        </form>
                    </td>
                </tr>
            {{/each}}
        {{else}}
            <tr>
                <td colspan="4" align="center">По вашему запросу ничего не найдено...</td>
            </tr>
        {{/if}}
    </tbody>
</table>
<a class="btn btn-primary" href="services/add">Добавить</a>
