{{>menu}}

<h1>РЕЗУЛЬТАТЫ ПОИСКА</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Наименование</th>
            <th scope="col">Адрес</th>
            <th scope="col">Телефон</th>
            <th scope="col">Тип</th>
            <th scope="col">Категория</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        {{#if centers.length}}
            {{#each centers}}
                <tr>
                    <td scope="row">{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.category}}</td>
                    <td> <a class="btn btn-primary" href="/results/detail/{{this.id}}">Подробнее</a></td>
                </tr>
            {{/each}}
        {{else}}
            <tr>
                <td colspan="4" align="center">По вашему запросу ничего не найдено...</td>
            </tr>
        {{/if}}
    </tbody>
</table>
