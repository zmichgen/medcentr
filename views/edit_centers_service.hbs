            {{#each type}}
                <option {{selected}} value={{this.id}}>{{this.type}}</option>
            {{/each}}
        </select>
    </div> -->

    <div style="padding: 20px">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-primary" href="/admin/centers">Отменить</a>
    </div>
</form>
